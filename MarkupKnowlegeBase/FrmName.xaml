<Window x:Class="Markdown.UI.FrmName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Markdown.UI"
        mc:Ignorable="d"
        Title="Enter Name" Height="100.589" Width="320" Icon="if_Apple_Books_2697663.ico" Background="#1C2329" Foreground="#adb7bd" >
    <Grid>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="10,6,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtName" Height="23" Margin="66,10,10.334,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <Button Content="OK" Name="btnOK" Margin="0,0,90.334,9.667" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" IsEnabled="{Binding ElementName=txtNew, Path=Text.Length}" Click="btnOK_Click"/>
        <Button Content="Cancel" Name="btnCancel" Margin="0,0,10.334,9.667" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="btnCancel_Click" />

    </Grid>
</Window>
